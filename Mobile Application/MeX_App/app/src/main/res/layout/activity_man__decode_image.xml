<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Man_DecodeImage">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <ProgressBar
        android:id="@+id/progress_loader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:visibility="visible" />

    <!--ImageView for decoded image-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="240dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Name :"
        android:textSize="18sp"
        android:layout_marginStart="50dp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_marginStart="180dp"
        />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="Claim Type :"
        android:textSize="18sp"
        android:layout_marginStart="50dp"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_marginStart="180dp"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Description :"
        android:textSize="18sp"
        android:layout_marginStart="50dp"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_marginStart="180dp"

        />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approve"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:onClick="ApproveBtnClicked"
        android:textColor="@android:color/white"
        android:background="@drawable/s_rounded_button_effect"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DisApprove"
        android:layout_below="@+id/imageView"
        android:onClick="DisApproveBtnClicked"
        android:layout_marginTop="20dp"
        android:layout_marginStart="240dp"
        android:textColor="@android:color/white"
        android:background="@drawable/s_rounded_button_effect"
        />


</RelativeLayout>
